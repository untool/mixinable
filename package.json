{
  "name": "mixinable",
  "version": "4.0.0",
  "description": "Functional JavaScript Mixin Utility",
  "main": "index.js",
  "scripts": {
    "test": "ava --verbose",
    "lint": "eslint --ignore-path .gitignore '**/*.js'",
    "fmt": "prettier --write --ignore-path .gitignore '**/*.js'",
    "release": "standard-version",
    "update": "yarn upgrade-interactive --latest",
    "reset": "git clean -dfx && yarn",
    "postrelease": "git push --follow-tags; npm publish"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/untool/mixinable.git"
  },
  "author": "dmbch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/untool/mixinable/issues"
  },
  "homepage": "https://github.com/untool/mixinable#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@commitlint/travis-cli": "^8.0.0",
    "ava": "^2.0.0",
    "cz-conventional-changelog": "^3.0.0",
    "eslint": "^6.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.0",
    "prettier": "^1.13.4",
    "standard-version": "^7.0.0"
  },
  "renovate": {
    "extends": [
      "github>untool/renovate-config:base"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "proseWrap": "never"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "env": {
      "node": true
    },
    "globals": {
      "Promise": true
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-empty": [
        2,
        "always"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
